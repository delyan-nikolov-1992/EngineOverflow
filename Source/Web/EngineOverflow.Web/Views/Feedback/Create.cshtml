@model EngineOverflow.Web.InputModels.Feedback.CreateInputModel
@{
    ViewBag.Title = "Your answer";
}
<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Create", "Feedback", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-11 col-md-offset-1">
            @Html.EditorFor(model => model.Content)
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Send feedback" class="btn btn-primary btn-lg" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
