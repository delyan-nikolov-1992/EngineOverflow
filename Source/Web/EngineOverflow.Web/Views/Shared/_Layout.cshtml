<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Engine Overflow</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Engine Overflow", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Ask question", "Ask", "Questions")</li>
                </ul>
                @*<div class="nav navbar-nav">
                        <input type="text" placeholder="Search by tags, separated by comma" style="width: 300px; max-width: 300px;">
                        <span class="glyphicon glyphicon-search"></span>
                    </div>*@

                <div class="nav navbar-nav inner-addon left-addon" style="top: 10px;">
                    <i class="glyphicon glyphicon-search" style="top: -2px;"></i>
                    <input type="text" placeholder="Search by tags, separated by comma" style="width: 300px; max-width: 300px;" />
                </div>

                @*<div class="search-container">
                        <form id="search" action="/search" method="get" autocomplete="off">
                            <input name="q" type="text" placeholder="Search Q&amp;A" value="" tabindex="1" autocomplete="off" maxlength="240" style="width: 194px; max-width: 194px;">
                        </form>
                    </div>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (this.TempData["Notification"] != null)
        {
            <div class="alert alert-success" role="alert">@this.TempData["Notification"]</div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Web portal - a professional forum/social network for automobile information</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sweetalert")
    @RenderSection("scripts", required: false)
</body>
</html>
