@model EngineOverflow.Web.InputModels.Questions.AskInputModel
@{
    ViewBag.Title = "Ask question";
}
<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Ask", "Questions", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Title, new { placeholder = "What is your automobile question? Please, be specific!" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-11 col-md-offset-1">
            @Html.EditorFor(model => model.Content)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tags, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Tags, new { placeholder = "At least one tag such as (four-stroke-engine, gasoline, diesel), separated by comma!" })
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Ask question" class="btn btn-primary btn-lg" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
